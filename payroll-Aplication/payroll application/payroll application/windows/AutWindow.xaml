<Window x:Class="payroll_application.windows.autWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:payroll_application.windows"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="autWindow" Height="450" Width="400" WindowStyle="None">
    <Grid x:Name="myGrid" MouseDown="dragClick">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Image MouseLeftButtonDown="exitApp" Source="/image/close.png" Width="20" HorizontalAlignment="Right" Margin="0,0,20,0" />
        </Grid>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0,0" StartPoint="1,1">
                <GradientStop Color="#CC01B6E9" Offset="0.003"/>
                <GradientStop Color="#FF644BF7" Offset="0.83"/>
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>
